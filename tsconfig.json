{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./types"
  }
}
